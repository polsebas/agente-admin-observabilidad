# OpenAI API Key (requerido)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Grafana Service Account Token (requerido para Grafana MCP)
GRAFANA_API_KEY=glsa_your-grafana-service-account-token-here

# Model Configuration
MODEL_ID=gpt-4o-mini

# Grafana URLs
GRAFANA_URL=http://host.docker.internal:3001

# MCP Server URLs (si corren en contenedores separados)
GRAFANA_MCP_URL=http://grafana-mcp:8000
LOKI_MCP_URL=http://grafana-mcp:8000
TEMPO_MCP_URL=http://grafana-mcp:8000

# Database
DB_FILE=/data/agno.db

# Quick Commands Configuration
QUICK_COMMANDS_ENABLED=true
QUICK_COMMANDS_AI_ANALYSIS=false
DAILY_DIGEST_TIME=09:00

# Alert Configuration
ALERT_DEDUP_WINDOW_MINUTES=60
LATENCY_THRESHOLD_MS=500
ERROR_RATE_THRESHOLD=0.01

# Agno Control Plane (opcional)
# AGNO_CP_URL=https://api.agno.com
# AGNO_CP_API_KEY=agno_cp_sk_your-api-key-here

